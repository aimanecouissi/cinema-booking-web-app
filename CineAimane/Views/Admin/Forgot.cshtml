@model AdminForgotViewModel
@{
	ViewData["Title"] = "Forgot Password";
}
<div class="bg-blob d-flex align-items-center justify-content-center min-vh-100">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-4 col-md-6 col-sm-9 col-10">
				<div class="bg-white border rounded-1 px-4 pt-5 pb-4">
					<h2 class="text-black fw-bold text-center mb-5"><span class="text-primary">Forgot</span> Password</h2>
					<form method="post" class="login-form" autocomplete="off">
						@if (ViewBag.Message != null)
						{
							<div class="alert alert-success rounded-1 fw-medium mb-3" role="alert">@ViewBag.Message</div>
						}
						<div class="mb-3">
							<div class="position-relative">
								<input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Email" required>
								<div class="form-control-icon">
									<i class='bx bx-envelope'></i>
								</div>
							</div>
							<span asp-validation-for="Email" class="text-danger d-block mt-2"></span>
						</div>
						<div class="d-grid">
							<input type="submit" value="Reset" class=" btn btn-primary btn-lg btn-block text-uppercase fw-semibold">
						</div>
						<div class="mt-3 text-center">
							<a asp-controller="Admin" asp-action="Index" class="my-0 py-0">Back to login page</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}